<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Player2"
            android:layout_width="143dp"
            android:layout_height="139dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/tumblr_1be3ab68629a7563ae85559f8ffecefc_fdeb4b93_640" />

        <TextView
            android:id="@+id/round"
            android:layout_width="145dp"
            android:layout_height="131dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="TextView" />

        <ImageView
            android:id="@+id/Player1"
            android:layout_width="145dp"
            android:layout_height="143dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/zenitsu" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enemy_hp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/enemy_armor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="TextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ecard1"
                android:layout_width="83dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:src="@drawable/cardface" />

            <ImageView
                android:id="@+id/ecard2"
                android:layout_width="80dp"
                android:layout_height="111dp"
                android:layout_weight="1"
                android:src="@drawable/cardface" />

            <ImageView
                android:id="@+id/ecard3"
                android:layout_width="84dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:src="@drawable/cardface" />

            <ImageView
                android:id="@+id/ecard4"
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/cardface" />
        </LinearLayout>

        <TextView
            android:id="@+id/place1"
            android:layout_width="match_parent"
            android:layout_height="187dp"
            android:text="TextView"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/your_hp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/your_armor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="TextView" />
            </LinearLayout>

            <TextView
                android:id="@+id/card1"
                android:layout_width="83dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/card2"
                android:layout_width="83dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/card3"
                android:layout_width="83dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/card4"
                android:layout_width="83dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>
        <![CDATA[





        >



    ]]>
    </LinearLayout>

    <LinearLayout
        android:layout_width="197dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/place2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="TextView"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play" />
    </LinearLayout>

</LinearLayout>